{
  "name": "angularmotoko",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "init:dfx": "npm run restart:clean:dfx && npm run refresh:motoko && dfx stop",
    "deploy:dfx": "npm run restart:dfx && npm run build:prod && dfx deploy --network ic --no-wallet",
    "restart:dfx": "dfx stop && dfx start --background",
    "restart:clean:dfx": "dfx stop && dfx start --background --clean",
    "generate:motoko": "dfx generate motoko",
    "build:prod": "export NODE_ENV=production && ng build --configuration production",
    "build:dev": "export NODE_ENV=development && ng build --configuration development",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.1.0",
    "@angular/common": "^16.1.0",
    "@angular/compiler": "^16.1.0",
    "@angular/core": "^16.1.0",
    "@angular/forms": "^16.1.0",
    "@angular/platform-browser": "^16.1.0",
    "@angular/platform-browser-dynamic": "^16.1.0",
    "@angular-builders/custom-webpack": "^16.0.0",
    "@angular/router": "^16.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.3",
    "@angular/cli": "~16.1.3",
    "@angular/compiler-cli": "^16.1.0",
    "@dfinity/agent": "^0.18.0",
    "@dfinity/candid": "^0.18.0",
    "@dfinity/principal": "^0.18.0",
    "@types/jasmine": "~4.3.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "process": "^0.11.10",
    "typescript": "~5.1.3"
  }
}
